/* ============================================
   MATERIAL DASHBOARD - MODERN SLEEK DESIGN
   ============================================ */

:root {
  --primary: #3b82f6;
  --primary-light: #60a5fa;
  --primary-dark: #1e40af;
  --accent: #10b981;
  --warning: #f59e0b;
  --danger: #ef4444;
  --surface: #1f2937;
  --surface-light: #374151;
  --surface-lighter: #4b5563;
  --text-primary: #f3f4f6;
  --text-secondary: #d1d5db;
  --border: #374151;
  --success-bg: rgba(16, 185, 129, 0.1);
  --warning-bg: rgba(245, 158, 11, 0.1);
  --danger-bg: rgba(239, 68, 68, 0.1);
}

.tab1-content {
  --padding: 16px;
  background: linear-gradient(135deg, #0f172a 0%, #1a2451 50%, #0d1b3a 100%);
  min-height: 100vh;
  position: relative;
  overflow-x: hidden;
  color: var(--text-primary);
}

/* Animated background elements */
.tab1-content::before {
  content: '';
  position: fixed;
  top: -50%;
  right: -50%;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 30% 50%, rgba(59, 130, 246, 0.08) 0%, transparent 50%);
  pointer-events: none;
  animation: float 20s ease-in-out infinite;
  z-index: 0;
}

.tab1-content::after {
  content: '';
  position: fixed;
  bottom: -50%;
  left: -50%;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 70% 50%, rgba(16, 185, 129, 0.08) 0%, transparent 50%);
  pointer-events: none;
  animation: float 25s ease-in-out infinite reverse;
  z-index: 0;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) translateX(0px); }
  50% { transform: translateY(20px) translateX(10px); }
}

/* Wrapper for content */
.tab1-wrapper {
  position: relative;
  z-index: 1;
}

/* Loading Container */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  gap: 24px;
  color: var(--text-secondary);
  padding: 40px 20px;
}

.loading-container ion-spinner {
  --color: var(--primary);
}

.loading-container p {
  font-size: 16px;
  font-weight: 500;
  letter-spacing: 0.5px;
}

/* Tab Selector */
.tab-selector {
  padding: 20px 16px;
  margin: 20px 16px 0;
  background: linear-gradient(135deg, rgba(31, 41, 55, 0.4) 0%, rgba(55, 65, 81, 0.4) 100%);
  border-radius: 16px;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(59, 130, 246, 0.2);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

ion-segment {
  width: 100%;
  background: rgba(15, 23, 42, 0.6);
  padding: 4px;
  border-radius: 12px;
  --indicator-color: var(--primary);
  --indicator-height: 100%;
  --indicator-transform: scale(0.95);
  --border-radius: 10px;
}

ion-segment-button {
  --background: transparent;
  --color: var(--text-secondary);
  --color-checked: var(--text-primary);
  --padding-start: 16px;
  --padding-end: 16px;
  --padding-top: 12px;
  --padding-bottom: 12px;
  font-weight: 600;
  letter-spacing: 0.5px;
  border-radius: 10px;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

ion-segment-button::part(native) {
  gap: 8px;
}

/* Summary Section */
.summary-section {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
  gap: 16px;
  padding: 0 16px 24px 16px;
  margin-top: 16px;
}

.summary-card {
  margin: 0;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(16, 185, 129, 0.1) 100%);
  border-radius: 16px;
  border: 1px solid rgba(59, 130, 246, 0.2);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(10px);
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.summary-card:hover {
  transform: translateY(-4px);
  border-color: rgba(59, 130, 246, 0.4);
  box-shadow: 0 12px 48px rgba(59, 130, 246, 0.2);
}

.summary-card ion-card-content {
  padding: 20px;
}

.summary-stat {
  text-align: center;
}

.stat-value {
  font-size: 32px;
  font-weight: 800;
  background: linear-gradient(135deg, var(--primary-light) 0%, var(--accent) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1;
  margin-bottom: 8px;
}

.stat-label {
  font-size: 11px;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 1px;
  font-weight: 600;
  margin-top: 4px;
}

/* Materials Container */
.materials-container {
  padding: 0 16px 40px 16px;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 20px;
  padding: 60px 32px;
  text-align: center;
  color: var(--text-secondary);
}

.empty-state ion-icon {
  font-size: 64px;
  color: var(--primary);
  opacity: 0.3;
}

.empty-state p {
  font-size: 16px;
  font-weight: 500;
  letter-spacing: 0.5px;
}

/* Materials Grid */
.materials-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 20px;
}

/* Material Card */
.material-card {
  margin: 0;
  background: linear-gradient(135deg, rgba(31, 41, 55, 0.6) 0%, rgba(55, 65, 81, 0.4) 100%);
  border-radius: 16px;
  border: 1px solid rgba(59, 130, 246, 0.15);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  position: relative;
  border-left: 4px solid rgba(99, 102, 241, 0.3);
}

.material-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
}

.material-card:hover {
  transform: translateY(-8px);
  border-color: rgba(59, 130, 246, 0.4);
  box-shadow: 0 20px 48px rgba(59, 130, 246, 0.25);
  background: linear-gradient(135deg, rgba(31, 41, 55, 0.8) 0%, rgba(55, 65, 81, 0.6) 100%);
}

.material-card.material-complete {
  border-left-color: var(--accent);
}

.material-card.material-partial {
  border-left-color: var(--warning);
}

.material-card.material-needed {
  border-left-color: var(--danger);
}

/* Card Header */
.card-header {
  display: flex;
  align-items: center;
  gap: 14px;
  padding: 16px 0;
  position: relative;
}

.material-image {
  width: 64px;
  height: 64px;
  border-radius: 12px;
  object-fit: cover;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(16, 185, 129, 0.2) 100%);
  border: 1px solid rgba(59, 130, 246, 0.2);
  flex-shrink: 0;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
}

.material-card:hover .material-image {
  box-shadow: 0 8px 24px rgba(59, 130, 246, 0.3);
  border-color: rgba(59, 130, 246, 0.4);
}

.header-info {
  flex: 1;
}

.header-info h3 {
  margin: 0;
  font-size: 16px;
  font-weight: 700;
  color: var(--text-primary);
  line-height: 1.3;
  word-break: break-word;
  letter-spacing: -0.2px;
}

ion-badge {
  font-size: 10px;
  padding: 6px 10px;
  margin-top: 6px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  border-radius: 6px;
  background: var(--success-bg);
  color: var(--accent);
  display: inline-block;
}

.material-card.material-partial ion-badge {
  background: var(--warning-bg);
  color: var(--warning);
}

.material-card.material-needed ion-badge {
  background: var(--danger-bg);
  color: var(--danger);
}

/* Stats Grid */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12px;
  margin-bottom: 16px;
  padding: 14px;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.05) 0%, rgba(16, 185, 129, 0.05) 100%);
  border-radius: 12px;
  border: 1px solid rgba(59, 130, 246, 0.1);
}

.stat {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 6px;
}

.stat-title {
  font-size: 10px;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 0.7px;
  font-weight: 700;
  opacity: 0.8;
}

.stat-value {
  font-size: 20px;
  font-weight: 800;
  line-height: 1;
  font-variant-numeric: tabular-nums;
}

.stat-value.have {
  color: var(--accent);
}

.stat-value.required {
  color: var(--text-secondary);
}

.stat-value.remaining {
  color: var(--warning);
}

.stat-value.remaining.negative {
  color: var(--danger);
}

.stat-value.remaining.positive {
  color: var(--accent);
}

/* Production Info */
.production-info {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 12px 14px;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.15) 0%, rgba(96, 165, 250, 0.1) 100%);
  border-radius: 10px;
  margin-bottom: 14px;
  font-size: 13px;
  color: var(--primary-light);
  border-left: 3px solid var(--primary);
  border: 1px solid rgba(59, 130, 246, 0.2);
  border-left: 3px solid var(--primary);
  transition: all 0.3s ease;
}

.production-info:hover {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(96, 165, 250, 0.15) 100%);
  border-color: rgba(59, 130, 246, 0.3);
}

.production-info ion-icon {
  font-size: 16px;
  flex-shrink: 0;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

.prod-time {
  flex: 1;
  font-weight: 600;
  letter-spacing: 0.3px;
}

/* Progress Bar */
.progress-bar-container {
  width: 100%;
  height: 8px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4px;
  overflow: hidden;
  border: 1px solid rgba(255, 255, 255, 0.05);
}

.progress-bar {
  height: 100%;
  transition: width 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  border-radius: 4px;
  background: linear-gradient(90deg, var(--accent) 0%, var(--primary-light) 100%);
  box-shadow: 0 0 12px rgba(59, 130, 246, 0.5);
}

.material-card.material-partial .progress-bar {
  background: linear-gradient(90deg, var(--warning) 0%, var(--primary-light) 100%);
  box-shadow: 0 0 12px rgba(245, 158, 11, 0.5);
}

.material-card.material-needed .progress-bar {
  background: linear-gradient(90deg, var(--danger) 0%, var(--warning) 100%);
  box-shadow: 0 0 12px rgba(239, 68, 68, 0.5);
}

/* ============================================
   RESPONSIVE DESIGN - TABLET (768px - 1024px)
   ============================================ */

@media (max-width: 1024px) {
  .materials-grid {
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 16px;
  }

  .summary-section {
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }
}

/* ============================================
   RESPONSIVE DESIGN - MOBILE (< 768px)
   ============================================ */

@media (max-width: 767px) {
  .tab1-content {
    --padding: 12px;
  }

  .tab-selector {
    padding: 16px;
    margin: 16px 12px 0;
  }

  .summary-section {
    grid-template-columns: repeat(3, 1fr);
    gap: 10px;
    padding: 0 12px 16px 12px;
    margin-top: 12px;
  }

  .summary-card {
    border-radius: 12px;
  }

  .summary-card ion-card-content {
    padding: 14px;
  }

  .stat-value {
    font-size: 24px;
  }

  .stat-label {
    font-size: 9px;
    letter-spacing: 0.6px;
  }

  .materials-container {
    padding: 0 12px 32px 12px;
  }

  .materials-grid {
    grid-template-columns: 1fr;
    gap: 12px;
  }

  .material-card {
    border-radius: 14px;
  }

  .material-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(59, 130, 246, 0.2);
  }

  .card-header {
    gap: 12px;
    padding: 12px 0;
  }

  .material-image {
    width: 56px;
    height: 56px;
    border-radius: 10px;
  }

  .header-info h3 {
    font-size: 15px;
    font-weight: 700;
  }

  .stats-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 10px;
    padding: 12px;
    margin-bottom: 12px;
  }

  .stat-title {
    font-size: 9px;
  }

  .stat-value {
    font-size: 18px;
  }

  .production-info {
    font-size: 12px;
    padding: 10px 12px;
    margin-bottom: 10px;
  }

  .production-info ion-icon {
    font-size: 14px;
  }

  .progress-bar-container {
    height: 6px;
  }
}

/* ============================================
   SMALL MOBILE (< 480px)
   ============================================ */

@media (max-width: 480px) {
  ion-segment {
    font-size: 12px;
  }

  ion-segment-button {
    --padding-top: 8px;
    --padding-bottom: 8px;
    --padding-start: 8px;
    --padding-end: 8px;
  }

  .stat-value {
    font-size: 14px;
  }

  .header-info h3 {
    font-size: 13px;
  }

  .production-info {
    flex-direction: column;
    gap: 4px;
    text-align: center;
  }

  .prod-time {
    word-break: break-word;
  }
}

/* ============================================
   DARK MODE
   ============================================ */

@media (prefers-color-scheme: dark) {
  .tab1-content {
    background: #1e1e1e;
  }

  .tab-selector {
    background: #2d2d2d;
  }

  .material-card {
    background: #2d2d2d;
  }

  .stats-grid {
    background: #1a1a1a;
  }

  .production-info {
    background: #1a2a4a;
    color: #64b5f6;
    border-left-color: #64b5f6;
  }

/* ============================================
   DARK MODE (ALREADY IMPLEMENTED)
   ============================================ */

/* The design is built for dark mode by default.
   The CSS variables and gradients are optimized for dark theme.
   All colors use the --surface, --text-primary, --primary variables
   which work perfectly in dark environments. */

/* ============================================
   ACCESSIBILITY & REDUCED MOTION
   ============================================ */

@media (prefers-reduced-motion: reduce) {
  .tab1-content::before,
  .tab1-content::after,
  .material-card,
  .progress-bar,
  .production-info ion-icon {
    animation: none;
    transition: none;
  }
}

@media (prefers-contrast: high) {
  .material-card {
    border-left-width: 6px;
    border-color: rgba(59, 130, 246, 0.6);
  }

  .production-info {
    border-left-width: 4px;
    border-color: var(--primary);
  }

  .stats-grid {
    border: 2px solid rgba(59, 130, 246, 0.4);
  }

  .summary-card {
    border-width: 2px;
  }
}

/* Focus visible for keyboard navigation */
ion-segment-button:focus-visible,
.material-card:focus-visible,
.summary-card:focus-visible {
  outline: 2px solid var(--primary);
  outline-offset: 2px;
}